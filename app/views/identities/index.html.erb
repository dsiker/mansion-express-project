<h1>Listing identities</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Birthdate</th>
      <th>Email</th>
      <th>Password digest</th>
      <th>Mansionowner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @identities.each do |identity| %>
      <tr>
        <td><%= identity.first_name %></td>
        <td><%= identity.last_name %></td>
        <td><%= identity.gender %></td>
        <td><%= identity.birthdate %></td>
        <td><%= identity.email %></td>
        <td><%= identity.password_digest %></td>
        <td><%= identity.mansionowner %></td>
        <td><%= link_to 'Show', identity %></td>
        <td><%= link_to 'Edit', edit_identity_path(identity) %></td>
        <td><%= link_to 'Destroy', identity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

