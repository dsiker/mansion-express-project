<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %></div>

    <div><%= f.label :email %><br />
    <%= f.email_field :email %></div>


    <div><%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %></div>

    <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

    <div class="field">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>

    <h2>Please fill in this personality form so we can match you up with similar people.</h2></br>

    <div class="panel panel-default">
    <h4 class="panel-heading">Please select from the following:</h4>
    
    
    <select name="trait[]" class="panel-body">
      <option value="" disable selected>Gender</option>
      <% @genders.each do |gender| %>
        <option value="<%=gender.name%>"><%=gender.name%></option>
      <% end %> 
    </select> 

    <select name="trait[]" class="panel-body">
      <option value="" disable selected>Relationship Status</option>
      <% @relationship_status.each do |relationship_status| %>
        <option value="<%=relationship_status.name%>"><%=relationship_status.name%></option>
      <% end %> 
    </select> 

    </br></br></br>

    <h4 class="panel-body">Please select all that apply to you:</h4>
    <% @random_traits.each do |r_trait| %>
      <input type="checkbox" name="trait[]" value="<%=r_trait.name%>"><%=r_trait.name%><br>
    <% end %>

    </br></br></br>

    <h4 class="panel-body">Tell us a bit about yourself:</h4><br>
    <h5 class="panel-heading">Short bio:</h5>
    <textarea name ="fluff[]" rows="4" placeholder="ex. my name is John, I'm from the UK and I work in design..." class="panel-body"></textarea>
    <br>

    <h5 class="panel-heading">Your hobbies:</h5>
    <textarea name ="fluff[]" rows="4" placeholder="ex. I like surfing and making short films..." class="panel-body"></textarea>
    <br>

    <h5 class="panel-heading">A quirk about yourself:</h5>
    <textarea name ="fluff[]" rows="4" placeholder="ex. I am afraid of flying in red airplanes..." class="panel-body"></textarea>
    <br>

    <div><%= f.submit "Sign up" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  </form>
</div>





